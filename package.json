{
	"name": "wurmnode",
	"description": "App for Wurm Online",
	"main": "app.js",
	"version": "1.1.0",
	"scripts": {
		"start": "electron .",
		"postinstall": "install-app-deps",
		"pack": "electron-builder --dir",
		"dist": "electron-builder",
		"dist:windows": "electron-builder --windows"
	},
	"build": {
		"appId": "com.wurmnode.app",
		"productName": "WurmNode",
		"linux": {
			"target": [
				"AppImage"
			],
			"category": "Games"
		},
		"win": {
			"target": "NSIS",
			"icon": "build/icon.png"
		},
		"nsis": {
			"allowToChangeInstallationDirectory": true,
			"oneClick": false
		},
		"asar": false
	},
	"keywords": [
		"wurm"
	],
	"author": "Drogos",
	"license": "MIT",
	"devDependencies": {
		"electron": "^11.0.2",
		"electron-builder": "^22.9.1"
	},
	"dependencies": {
		"electron-settings": "^4.0.2",
		"node-fetch": "^2.6.1",
		"serialport": "^9.0.2",
		"sqlite3": "^5.0.0",
		"ws": "^7.3.1"
	}
}
